{
  "_comment": "このファイルはClaude Desktop用の設定例です。Cursorでも同じフォーマットが使えます（設定ファイルの場所は異なります）。",
  "_claude_desktop_path": "macOS: ~/Library/Application Support/Claude/claude_desktop_config.json | Windows: %APPDATA%\\Claude\\claude_desktop_config.json",
  "_cursor_path": "macOS: ~/.cursor/mcp.json | Windows: %USERPROFILE%\\.cursor\\mcp.json",
  "mcpServers": {
    "google-ads": {
      "command": "npx",
      "args": [
        "-y",
        "@kazuya.oda/google-ads-mcp"
      ],
      "env": {
        "GOOGLE_ADS_CLIENT_ID": "your-client-id.apps.googleusercontent.com",
        "GOOGLE_ADS_CLIENT_SECRET": "your-client-secret",
        "GOOGLE_ADS_DEVELOPER_TOKEN": "your-developer-token",
        "GOOGLE_ADS_REFRESH_TOKEN": "your-refresh-token",
        "GOOGLE_ADS_CUSTOMER_ID": "1234567890",
        "GOOGLE_ADS_LOGIN_CUSTOMER_ID": "9876543210",
        "SKIP_CONNECTION_TEST": "true"
      }
    }
  }
}
